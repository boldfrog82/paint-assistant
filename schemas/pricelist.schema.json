{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/pricelist.schema.json",
  "title": "Paint price list",
  "type": "object",
  "required": [
    "currency",
    "product_categories"
  ],
  "properties": {
    "document_source": {
      "type": "string"
    },
    "effective_date": {
      "type": "string"
    },
    "currency": {
      "type": "string",
      "minLength": 1
    },
    "notes": {
      "anyOf": [
        {"type": "string"},
        {"type": "array"}
      ]
    },
    "product_categories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "category_name",
          "subcategories"
        ],
        "properties": {
          "category_name": {
            "type": "string",
            "minLength": 1
          },
          "subcategories": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "subcategory_name",
                "products"
              ],
              "properties": {
                "subcategory_name": {
                  "type": "string",
                  "minLength": 1
                },
                "products": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": [
                      "product_name"
                    ],
                    "properties": {
                      "product_code": {
                        "type": "string"
                      },
                      "product_name": {
                        "type": "string",
                        "minLength": 1
                      },
                      "prices": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "required": [
                            "size",
                            "price"
                          ],
                          "properties": {
                            "size": {
                              "type": "string",
                              "minLength": 1
                            },
                            "price": {
                              "type": "number"
                            }
                          },
                          "additionalProperties": false
                        }
                      }
                    },
                    "additionalProperties": true
                  }
                }
              },
              "additionalProperties": true
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
